@using SIP.UI.Models.Protocols
@using MudBlazor

<MudDialog>
    <DialogContent>
        <MudText Typo="Typo.h6" Color="Color.Error">Confirma a exclusão do protocolo?</MudText>
        <MudText Typo="Typo.body2">Número: @ProtocolToDelete.Number</MudText>
        <MudText Typo="Typo.body2">Assunto: @ProtocolToDelete.Subject</MudText>
    </DialogContent>
    <DialogActions>
        <MudButton Variant="Variant.Filled" Color="Color.Error" OnClick="Delete">Excluir</MudButton>
        <MudButton Variant="Variant.Text" OnClick="Cancel">Cancelar</MudButton>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter]
    private IMudDialogInstance MudDialog { get; set; } = default!;

    [Parameter] 
    public Protocol ProtocolToDelete { get; set; } = new();

    private void Delete() => 
        MudDialog.Close(DialogResult.Ok(true));

    private void Cancel() => 
    MudDialog.Cancel();
}